# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# Application.java
GET     /                           controllers.Application.index()
GET     /TermsConditionsUse         controllers.Application.terms()
GET     /Contact                    controllers.Application.contact()
GET     /AboutUs                    controllers.Application.about()

# Login
# Login.java
GET     /login                      controllers.Login.logIn()
GET     /create                     controllers.Login.createNewUser()
GET     /login                      controllers.Login.loginUser()

# Profiles
# Profile.java
GET     /name                       controllers.Profile.profile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
